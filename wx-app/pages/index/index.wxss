/**index.wxss**/
.page-container {
  height: 100vh;
  width: 100vw;
  position: relative;
  background: #f7f8fa;
}

.map {
  width: 100%;
  height: 100%;
  position: absolute;
  top: 0;
  left: 0;
  z-index: 1;
}

/* 搜索栏样式 */
.search-container {
  position: absolute;
  top: 24rpx;
  left: 24rpx;
  right: 24rpx;
  z-index: 2;
  border-radius: 16rpx;
  padding: 24rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.date-picker {
  flex: 1;
  display: flex;
  align-items: center;
  margin-right: 24rpx;
}

.picker-item {
  flex: 1;
  padding: 8rpx 0;
}

.picker-label {
  font-size: 24rpx;
  color: #666;
  margin-bottom: 8rpx;
  display: block;
}

.picker-value {
  font-size: 28rpx;
  color: #333;
  font-weight: 500;
  display: flex;
  align-items: center;
}

.picker-time {
  margin-left: 12rpx;
  color: #666;
}

.date-separator {
  width: 32rpx;
  height: 2rpx;
  background: #ddd;
  margin: 0 20rpx;
  position: relative;
}

.date-separator::before,
.date-separator::after {
  content: '';
  position: absolute;
  width: 8rpx;
  height: 8rpx;
  background: #ddd;
  border-radius: 50%;
  top: -3rpx;
}

.date-separator::before {
  left: -4rpx;
}

.date-separator::after {
  right: -4rpx;
}

.search-btn {
  background: #1989fa;
  padding: 16rpx 36rpx;
  border-radius: 32rpx;
  box-shadow: 0 4rpx 8rpx rgba(25, 137, 250, 0.2);
  transition: all 0.3s ease;
}

.search-btn:active {
  transform: scale(0.95);
  background: #0e5aa0;
}

.search-text {
  font-size: 28rpx;
  color: #fff;
  font-weight: 500;
}

.content-container {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  z-index: 2;
  padding: 24rpx;
  padding-bottom: calc(constant(safe-area-inset-bottom) + 24rpx);
  padding-bottom: calc(env(safe-area-inset-bottom) + 24rpx);
}

.glass-effect {
  background: rgba(255, 255, 255, 0.85);
  backdrop-filter: blur(10px);
  -webkit-backdrop-filter: blur(10px);
  border: 1px solid rgba(255, 255, 255, 0.18);
  box-shadow: 0 8px 32px 0 rgba(31, 38, 135, 0.15);
}

.pet-list {
  border-radius: 24rpx;
  overflow: hidden;
  margin-top: 40rpx;
}

.pet-list-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 32rpx 40rpx;
  border-bottom: 1px solid rgba(0, 0, 0, 0.05);
}

.title {
  font-size: 34rpx;
  font-weight: 600;
  color: #333;
}

.refresh-btn {
  background: rgba(25, 137, 250, 0.1);
  padding: 12rpx 24rpx;
  border-radius: 32rpx;
  transition: all 0.3s ease;
}

.refresh-btn:active {
  background: rgba(25, 137, 250, 0.2);
}

.refresh-text {
  font-size: 26rpx;
  color: #1989fa;
}

.pet-items {
  max-height: 60vh;

}

.pet-item {
  display: flex;
  align-items: center;
  padding: 32rpx 40rpx;
  margin-bottom: 24rpx;
  background: rgba(255, 255, 255, 0.9);
  border-radius: 16rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.03);
  transition: all 0.3s ease;
}

.pet-item:last-child {
  margin-bottom: 0;
}

.pet-item:active {
  transform: scale(0.98);
}

.pet-avatar {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  margin-right: 28rpx;
  border: 2rpx solid rgba(255, 255, 255, 0.8);
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}

.pet-info {
  flex: 1;
  margin-right: 32rpx;
}

.pet-name {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 12rpx;
}

.pet-location {
  font-size: 26rpx;
  color: #666;
  margin-bottom: 8rpx;
}

.pet-update-time {
  font-size: 24rpx;
  color: #999;
}

.navigate-btn {
  padding: 16rpx 36rpx;
  background: #1989fa;
  border-radius: 32rpx;
  box-shadow: 0 4rpx 8rpx rgba(25, 137, 250, 0.2);
  transition: all 0.3s ease;
  flex-shrink: 0;
}

.navigate-btn:active {
  transform: scale(0.95);
  background: #0e5aa0;
}

.navigate-text {
  font-size: 26rpx;
  color: #fff;
  font-weight: 500;
}

.scrollarea {
  flex: 1;
  overflow-y: hidden;
}

.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
  color: #aaa;
  width: 80%;
}

.userinfo-avatar {
  overflow: hidden;
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.usermotto {
  margin-top: 200px;
}

.avatar-wrapper {
  padding: 0;
  width: 56px !important;
  border-radius: 8px;
  margin-top: 40px;
  margin-bottom: 40px;
}

.avatar {
  display: block;
  width: 56px;
  height: 56px;
}

.nickname-wrapper {
  display: flex;
  width: 100%;
  padding: 16px;
  box-sizing: border-box;
  border-top: .5px solid rgba(0, 0, 0, 0.1);
  border-bottom: .5px solid rgba(0, 0, 0, 0.1);
  color: black;
}

.nickname-label {
  width: 105px;
}

.nickname-input {
  flex: 1;
}
